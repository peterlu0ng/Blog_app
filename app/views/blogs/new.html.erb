<h1>Create a new blog</h1>

<%= form_with scope: :blog, url: blogs_path, local: true do |f| %>

    <p>
        <%= f.label :title%><br/>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :body%><br/>
        <%= f.text_area :body%>
    </p>
    <p>
        <%= f.submit %>
    </p>

<% end %> 