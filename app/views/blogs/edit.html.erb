<h1>Edit blog</h1>

<% if @blog.errors.any?%>
    <h2>The following errors prevented the articles from being saved</h2>
    <ul>
        <% @blog.errors.full_messages.each do |msg|%>
            <li><%= msg %></li>
        <%end%>
     </ul>
    <%end%>

<%= form_with(model: @blog, data: {turbo: false}, local: true, ) do |f| %>

    <p>
        <%= f.label :title%><br/>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :body%><br/>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>

<% end %> 