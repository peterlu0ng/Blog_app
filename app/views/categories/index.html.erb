 <h1 id= 'logo'class ="text-center">Categories Listing Page</h1>
<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
  </div>
<div class="container">
    <% @categories.each do |category|%>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow-none mb-5 bg-light rounded">
            <div class="card-body">
              <h5 class="card-title"><%= link_to category.name, category_path(category)%></h5>
            <p class="card-text"><%= pluralize(category.blogs.count, "blog") %></p>
            </div>
            <div class="card-footer text-body-secondary">
              <small>Created <%= time_ago_in_words(category.created_at)%> ago,
                edited <%=time_ago_in_words(category.updated_at)%> ago</small>
            </div>
          </div>
        </div>
    <% end %>
</div>