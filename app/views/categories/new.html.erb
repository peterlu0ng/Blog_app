<h1 id= "show" class ="text-center">Create a new category</h1>
<div class= "row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors', obj: @category %>

        <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-white rounded", data: {turbo: false}, local: true, ) do |f| %>
            <div class="form-group row">
            <%= f.label :name, 'Category Name', class: "col-2 mb-3 col-form-label"%>
            <div class= "col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
            </div>
        </div>
        <div class="text-center">
            <%= f.submit class: "btn btn-outline-dark" %>
            </div>

    <%= link_to "[ Cancel and return to blogs listing ]", blogs_path%>
    <% end %> 
    </div>
</div>

